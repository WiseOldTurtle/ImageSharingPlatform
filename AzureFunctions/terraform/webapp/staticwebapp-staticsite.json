{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "staticSiteName": {
      "type": "string"
    },
    "storageConnectionString": {
      "type": "string"
    },
    "imageResolution": {
      "type": "string"
    },
    // "linkShortenerApiKey": {
    //   "type": "string"
    // },
    // "authSecret": {
    //   "type": "string"
    // },
    "logLevel": {
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/staticSites/config",
      "apiVersion": "2020-10-01",
      "name": "[concat(parameters('staticSiteName'), '/appsettings')]",
      "properties": {
        "STORAGE_CONNECTION_STRING": "[parameters('storageConnectionString')]",
        "IMAGE_RESOLUTION": "[parameters('imageResolution')]",
        // "LINK_SHORTENER_API_KEY": "[parameters('linkShortenerApiKey')]",
        // "AUTH_SECRET": "[parameters('authSecret')]",
        "LOG_LEVEL": "[parameters('logLevel')]"
      }
    }
  ]
}
